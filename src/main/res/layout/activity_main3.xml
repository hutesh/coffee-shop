<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hutesh.sunshine.app.MainActivity3">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Registration"
        android:id="@+id/reghead"
        android:background="#250716"
        style="italic"
        android:autoText="false"
        android:textColor="#ccc"
        android:textSize="45dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center_horizontal|top"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reguser"
        android:layout_below="@+id/reghead"
        android:layout_alignParentStart="true"
        android:layout_marginTop="61dp"
        android:hint="Username" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/regpass"
        android:hint="Password"
        android:layout_below="@+id/reguser"
        android:inputType="textPassword"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/regregbtn"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/regpass"
        android:layout_centerHorizontal="true"
        android:textSize="30dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/regemail"
        android:layout_below="@+id/regpass"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/regpass"
        android:hint="EmailID"
        android:width="10dp"
        android:textSize="20dp" />
</RelativeLayout>
