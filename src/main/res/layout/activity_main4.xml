<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hutesh.sunshine.app.MainActivity4"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello Hutesh"
            android:id="@+id/hellohutesh"
            android:background="#250716"
            android:textColor="#ccc"
            android:textSize="45dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="center_horizontal|top"
            android:layout_marginLeft="20dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
                android:layout_width="150dp"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:text="Today Order"
                android:onClick="bossorder"
                android:id="@+id/totalorder"
                android:layout_marginTop="30dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-----"
            android:id="@+id/no_of_order"
            android:textColor="#250716"
            android:textSize="45dp"
            android:paddingLeft="15dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="20dp" />

        <Button
            android:layout_width="150dp"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:text="  Today Cost"
            android:id="@+id/totalcost"
            android:layout_marginTop="0dp"
            android:onClick="bosscost"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-----"
            android:id="@+id/cost"
            android:textColor="#250716"
            android:textSize="45dp"
            android:paddingLeft="15dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="20dp" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="258dp"
            android:src="@drawable/workprogress"
            android:id="@+id/cofeecup"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>
    </LinearLayout>
</ScrollView>
